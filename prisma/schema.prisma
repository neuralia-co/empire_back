
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("LOCAL_URI")
}

model Invoice {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String   @db.VarChar(255)
  content   String?
  url       String?
  processed Boolean  @default(false)
  owner     User     @relation(fields: [ownerId], references: [id])
  ownerId   Int
  // pretax value
  // VAT
  // remove processed
  // date invoice
  // automatic title
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  name         String
  invoices     Invoice[]
  password     String
}
